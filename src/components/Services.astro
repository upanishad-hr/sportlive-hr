---
import ServiceCard from './ServiceCard.astro';
import type { Lang } from '../i18n/utils';
import { useTranslations } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const icons = {
  odds: `<svg class="w-7 h-7 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
  </svg>`,
  risk: `<svg class="w-7 h-7 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
  </svg>`,
  feeds: `<svg class="w-7 h-7 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
  </svg>`,
  markets: `<svg class="w-7 h-7 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
  </svg>`,
  product: `<svg class="w-7 h-7 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
  </svg>`
};
---

<section id="services" class="section-padding relative overflow-hidden">
  <!-- Background Glow -->
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-accent/5 rounded-full blur-[120px] -z-10"></div>

  <div class="container-narrow mx-auto">
    <div class="text-center mb-20">
      <h2 class="text-4xl md:text-5xl font-black text-neutral-900 dark:text-white mb-6 tracking-tight">{t.services.title}</h2>
      <p class="text-xl text-neutral-600 dark:text-neutral-400 max-w-2xl mx-auto font-light">{t.services.subtitle}</p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <ServiceCard
        title={t.services.odds.title}
        description={t.services.odds.description}
        features={t.services.odds.features}
        icon={icons.odds}
      />
      <ServiceCard
        title={t.services.risk.title}
        description={t.services.risk.description}
        features={t.services.risk.features}
        icon={icons.risk}
      />
      <ServiceCard
        title={t.services.feeds.title}
        description={t.services.feeds.description}
        features={t.services.feeds.features}
        icon={icons.feeds}
      />
      <ServiceCard
        title={t.services.markets.title}
        description={t.services.markets.description}
        features={t.services.markets.features}
        icon={icons.markets}
      />
      <ServiceCard
        title={t.services.product.title}
        description={t.services.product.description}
        features={t.services.product.features}
        icon={icons.product}
      />
    </div>
  </div>
</section>
