---
import type { Lang } from '../i18n/utils';
import { useTranslations } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section id="contact" class="section-padding relative">
  <!-- Background accent -->
  <div class="absolute bottom-0 left-0 right-0 h-1/2 bg-gradient-to-t from-primary-dark to-transparent pointer-events-none"></div>

  <div class="container-narrow mx-auto relative z-10">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">{t.contact.title}</h2>
      <p class="text-neutral-400 max-w-2xl mx-auto">{t.contact.subtitle}</p>
    </div>

    <div class="grid md:grid-cols-2 gap-12 max-w-4xl mx-auto">
      <!-- Contact Form -->
      <form
        name="contact"
        method="POST"
        data-netlify="true"
        class="space-y-6"
      >
        <input type="hidden" name="form-name" value="contact" />
        <input type="hidden" name="lang" value={lang} />

        <div>
          <label for="name" class="block text-sm font-medium text-neutral-300 mb-2">
            {t.contact.form.name}
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-neutral-500 focus:outline-none focus:border-accent/50 focus:ring-1 focus:ring-accent/50 transition-colors"
          />
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-neutral-300 mb-2">
            {t.contact.form.email}
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-neutral-500 focus:outline-none focus:border-accent/50 focus:ring-1 focus:ring-accent/50 transition-colors"
          />
        </div>

        <div>
          <label for="message" class="block text-sm font-medium text-neutral-300 mb-2">
            {t.contact.form.message}
          </label>
          <textarea
            id="message"
            name="message"
            rows="5"
            required
            class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-lg text-white placeholder-neutral-500 focus:outline-none focus:border-accent/50 focus:ring-1 focus:ring-accent/50 transition-colors resize-none"
          ></textarea>
        </div>

        <button type="submit" class="btn-primary w-full">
          {t.contact.form.submit}
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
          </svg>
        </button>
      </form>

      <!-- Company Info -->
      <div class="space-y-8">
        <div class="card">
          <h3 class="text-lg font-semibold text-white mb-4">{t.contact.info.company}</h3>
          <div class="space-y-3 text-neutral-400">
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-accent mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <div>
                <p>{t.contact.info.address}</p>
                <p>{t.contact.info.city}</p>
              </div>
            </div>
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-accent flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              <p>{t.contact.info.vat}</p>
            </div>
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-accent flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"/>
              </svg>
              <p>{t.contact.info.oib}</p>
            </div>
          </div>
        </div>

        <!-- Map placeholder -->
        <div class="card aspect-video flex items-center justify-center bg-neutral-800/50">
          <div class="text-center text-neutral-500">
            <svg class="w-12 h-12 mx-auto mb-2 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <p class="text-sm">Zadar, Croatia</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
