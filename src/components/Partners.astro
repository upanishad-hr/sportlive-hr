---
import type { Lang } from '../i18n/utils';
import { useTranslations } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

const partners = [
  { name: 'Sportradar', logo: 'Betradar' },
  { name: 'Genius Sports', logo: 'Betgenius' },
  { name: 'EveryMatrix', logo: 'EveryMatrix' },
  { name: 'LSports', logo: 'LSports' }
];
---

<section id="partners" class="section-padding">
  <div class="container-narrow mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-accent mb-4">{t.partners.title}</h2>
      <p class="text-neutral-400 max-w-2xl mx-auto">{t.partners.subtitle}</p>
    </div>

    <div class="flex flex-wrap items-center justify-center gap-12 md:gap-16">
      {partners.map((partner) => (
        <div class="text-neutral-500 hover:text-neutral-300 transition-colors group cursor-default">
          <div class="text-2xl md:text-3xl font-bold tracking-tight opacity-50 group-hover:opacity-80 transition-opacity">
            {partner.logo}
          </div>
        </div>
      ))}
    </div>

    <!-- Trust indicators -->
    <div class="mt-16 flex flex-wrap items-center justify-center gap-8 text-center">
      <div class="px-6 py-4 bg-white/5 rounded-xl">
        <div class="text-accent font-semibold text-lg">
          {lang === 'hr' ? 'Pouzdani diljem Europe' : lang === 'de' ? 'In ganz Europa vertraut' : 'Trusted Across Europe'}
        </div>
      </div>
      <div class="px-6 py-4 bg-white/5 rounded-xl">
        <div class="text-accent font-semibold text-lg">
          {lang === 'hr' ? 'Neovisni o sustavu' : lang === 'de' ? 'Systemunabhängig' : 'System Independent'}
        </div>
      </div>
      <div class="px-6 py-4 bg-white/5 rounded-xl">
        <div class="text-accent font-semibold text-lg">
          {lang === 'hr' ? 'Prilagođena rješenja' : lang === 'de' ? 'Maßgeschneiderte Lösungen' : 'Tailored Solutions'}
        </div>
      </div>
    </div>
  </div>
</section>
